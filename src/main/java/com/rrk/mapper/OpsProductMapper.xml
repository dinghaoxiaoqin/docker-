<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rrk.dao.OpsProductMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.rrk.entity.OpsProduct">
        <id column="id" property="id" />
        <result column="product_src" property="productSrc" />
        <result column="product_name" property="productName" />
        <result column="product_brand" property="productBrand" />
        <result column="product_no" property="productNo" />
        <result column="product_price" property="productPrice" />
        <result column="stock" property="stock" />
        <result column="sale_count" property="saleCount" />
        <result column="amount" property="amount" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, product_src, product_name, product_brand, product_no, product_price, stock, sale_count, amount
    </sql>

</mapper>
